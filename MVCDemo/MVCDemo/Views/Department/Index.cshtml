@model List<Department>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdvLayout";
}
<a href="/Department/New" class="btn btn-primary" > New</a>
<h1>Index</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }

</table>
