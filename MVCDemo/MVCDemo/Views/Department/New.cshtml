@model Department
@{
    ViewData["Title"] = "New";
}

<h1>New Department</h1>
<form method="post" action="/Department/SaveNew" >
    <div>
        <label>Name</label>
        <input type="text" class="form-control" name="Name" id="Name" value="@Model?.Name"/>
    </div>
    <div>
        <label>Manager Name</label>
        <input type="text" class="form-control" name="ManagerName" id="ManagerName" value="@Model?.ManagerName"/>
    </div>
    <input type="submit" value="Create" class="btn btn-success" />
</form>

