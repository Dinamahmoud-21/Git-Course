@model Employee
<div class="card" style="width:400px">
    <img class="card-img-top" src="/Images/@Model.Image" style="width:100px;height:150px" alt="Card image">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">@Model.Address</p>
        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    </div>
</div>
